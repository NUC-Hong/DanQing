.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f5f5f5;
  height: 100vh;
  justify-content: space-between;
}

.chat-container {
  flex: 1;
  width: 100%;
  margin-bottom: 20px;
}

.chat-scroll {
  background-color: #fff;
  border-radius: 10px;
  padding: 10px;
  height: 100%;
}

.chat-item {
  display: flex;
  margin-bottom: 20px;
  align-items: flex-start;
}

.user-message {
  flex-direction: row-reverse;
}

.ai-message {
  flex-direction: row;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin: 0 10px;
}

.message-content {
  padding: 10px;
  border-radius: 10px;
  max-width: 70%;
  background-color: #007AFF;
  color: #fff;
}

.user-message.message-content {
  background-color: #DCF8C6;
  color: #000;
}

.input-container {
  display: flex;
  flex-direction: row;
  width: 100%;
  background-color: #fff;
  padding: 10px;
  border-radius: 10px;
  align-items: center;
}

.input-container input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin: 0 10px;
  overflow: hidden;
  resize: none;
}

.input-container button {
    padding: 10px 20px;
    background-color: #007AFF;
    color: #fff;
    border: none;
    border-radius: 5px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.image-preview {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.image-preview image {
  max-width: 80%;
  max-height: 80%;
}

.image-preview button {
  margin-top: 10px;
  padding: 10px 20px;
  background-color: #fff;
  color: #007AFF;
  border: none;
  border-radius: 5px;
}

/* 加载动画容器样式 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

/* 新添加的按钮容器样式 */
.button-container {
  display: flex;
  justify-content: space-between;
  width: 200px;
  margin-top: 10px;
}

.upload-image-button {
  background-color: transparent;
  border: none;
  padding: 0;
  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative; /* 相对定位 */
}

.upload-icon {
  width: 100%; /* 使图标宽度填满按钮 */
  height: 100%; /* 使图标高度填满按钮 */
  object-fit: cover; /* 平铺图标 */
  position: absolute; /* 绝对定位 */
  top: 0; /* 距离顶部为 0 */
  left: 0; /* 距离左侧为 0 */
}